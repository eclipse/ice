<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
          <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.ice.client.rcp.application"
            description="The Eclipse Integrated Computational Environment"
            name="ICE">
         <property
               name="appName"
               value="ICE">
         </property>
		<property
    		name="applicationXMI"
		    value="org.eclipse.platform/LegacyIDE.e4xmi">
		</property>
		<property
    		name="cssTheme"
    		value="org.eclipse.e4.ui.css.theme.e4_default">
		</property>
      </product>
  </extension>
  	<!-- Editors -->
      <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.ice.viz.visit.VisitEditor"
            default="false"
            id="org.eclipse.ice.viz.visit.VisitEditor"
            name="VisIt Editor">
      </editor>
      <editor
            class="org.eclipse.ice.viz.plotviewer.CSVPlotEditor"
            default="false"
            id="org.eclipse.ice.viz.plotviewer.CSVPlotEditor"
            name="CSV Plot Editor">
      </editor>
   </extension>
      <!-- Plot and file viewers-->
      <extension
            point="org.eclipse.ui.views">
         <view
               allowMultiple="false"
               class="org.eclipse.ice.viz.visit.VisitPlotViewer"
               fastViewWidthRatio="0.23f"
               id="org.eclipse.ice.viz.visit.VisitPlotViewer"
               name="VisIt Plot Viewer"
               restorable="true">
         </view>
         <view
               allowMultiple="false"
               class="org.eclipse.ice.viz.plotviewer.CSVPlotViewer"
               fastViewWidthRatio="0.23f"
               id="org.eclipse.ice.viz.plotviewer.CSVPlotViewer"
               name="CSV Plot Viewer"
               restorable="true">
         </view>
         <view
               allowMultiple="false"
               class="org.eclipse.ice.viz.VizFileViewer"
               fastViewWidthRatio="0.23f"
               id="org.eclipse.ice.viz.VizFileViewer"
               name="Visualization File Viewer"
               restorable="true">
         </view>
         <!-- CSV Data Table View -->
         <view
               allowMultiple="false"
               class="org.eclipse.ice.viz.plotviewer.CSVDataTableViewer"
               fastViewWidthRatio="0.77f"
               id="org.eclipse.ice.viz.plotviewer.CSVDataTableViewer"
               name="CSV Data View"
               restorable="true">
         </view>
      </extension>
      <!-- Perspective definition -->
      <extension
            point="org.eclipse.ui.perspectives">
         <perspective
               class="org.eclipse.ice.viz.VisualizationPerspective"
               fixed="true"
               id="org.eclipse.ice.viz.VisualizationPerspective"
               name="Visualization">
         </perspective>
      </extension>
      <!-- Perspective line up and view definitions -->
    <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ice.viz.VisualizationPerspective">
         <view
         	   closeable="false"
               id="org.eclipse.ice.viz.VizFileViewer"
               ratio="0.23f"
               relationship="left"
               relative="org.eclipse.ui.views"
               visible="true">
         </view>
         <view
               closeable="false"
               id="org.eclipse.ice.viz.visit.VisitPlotViewer"
               ratio="0.23f"
               relationship="bottom"
               relative="org.eclipse.ice.viz.VizFileViewer"
               visible="true">
         </view>
         <view
               closeable="false"
               id="org.eclipse.ice.viz.plotviewer.CSVPlotViewer"
               ratio="0.23f"
               relationship="stack"
               relative="org.eclipse.ice.viz.visit.VisitPlotViewer"
               visible="true">
         </view>
         <view
               closeable="true"
               id="org.eclipse.ice.viz.plotviewer.CSVDataTableViewer"
               ratio="0.75f"
               relationship="bottom"
               relative="org.eclipse.ui.console.ConsoleView"
               visible="false">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="org.eclipse.ice.viz.toolbar"
               label="Visualization Toolbar">
            <command
                  commandId="org.eclipse.ice.viz.LaunchVisitCommand"
                  id="Launch VisIt Command"
                  label="Launch VisIt"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.eclipse.ice.viz.visit.LaunchVisitHandler"
            id="org.eclipse.ice.viz.LaunchVisitCommand"
            name="Launch VisIt">
      </command>
   </extension>
</plugin>
